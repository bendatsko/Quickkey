inputDOM.onkeydown = function() {

    let input = inputDOM.innerHTML.toString()
    let key = event.keyCode || event.charCode
    let divContents = document.getElementById(selectedDivId.toString()).innerHTML
    // console.log(key)
    // console.log(selectedDivId)

    // if(ctrlBack) {
    //     let currentLength = input.toString().length
    //     let foundSpace = false
    //     console.log("this should be doing something")

    //     for(let deinc = currentLength; foundSpace; deinc--) {
    //         console.log(input.charAt(deinc))
    //         if(input.toString().charAt(deinc) === " ") {
    //             foundSpace = true
    //         }
    //     }

    // }

    if(65 <= key && key <= 90 || key === 32) {

        inputDOM.onkeyup = function() {
        console.log(selectedDivId)
        console.log("div contents: " + divContents + "  selected div id: " + input.charAt(0))
        // console.log("selected div id" + selectedDivId)
        
        }

        if(input.charAt(selectedDivId) === divContents) {
            // console.log("yeah that's good")
            document.getElementById(selectedDivId.toString()).style.color = "white"
        }
    
        if(input.charAt(selectedDivId - 1) != divContents) {
            // console.log("NO BAD")
            document.getElementById(selectedDivId.toString()).style.color = "#F75656"
        }

    	selectedDivId++
    }

    if(key === 8) {
        selectedDivId--
        document.getElementById(selectedDivId.toString()).style.color = "#C8C9CA"
    }
}

















